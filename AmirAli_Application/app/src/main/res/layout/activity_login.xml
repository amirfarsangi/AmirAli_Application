<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bakgrond1"
    tools:context=".Login_Activity">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="540dp"
        android:background="@drawable/shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="123dp"
            app:srcCompat="@drawable/imageuser" />

        <Button
            android:id="@+id/loginbtn"
            app:backgroundTint="@null"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="440dp"
            android:background="#75E91E63"
            android:text="Login"

            />

        <TextView
            android:id="@+id/textloginuser"
            android:layout_width="160dp"
            android:layout_height="77dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="95dp"
            android:text="Login User"
            android:textSize="30dp"
            android:textColor="#BDBCBC"


            />

        <EditText
            android:id="@+id/edittextusernam"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="50dp"
            android:hint="Username"
            />

        <TextView
            android:id="@+id/textViewusername"
            android:layout_width="160dp"
            android:layout_height="33dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="180dp"
            android:text="UserName:"
            android:textSize="20dp"
            android:textColor="#BDBCBC" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="50dp"
            android:hint="Password"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textViewpassword"
            android:layout_width="160dp"
            android:layout_height="33dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="275dp"
            android:text="EnterPassword:"
            android:textSize="20dp"
            android:textColor="#BDBCBC" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>